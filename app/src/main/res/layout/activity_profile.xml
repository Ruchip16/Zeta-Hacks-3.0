<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity"
        android:background="@color/light_bg"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Miss Jajodia"
                android:layout_marginLeft="16dp"
                android:textFontWeight="300"
                android:layout_marginTop="15dp"
                android:textColor="@color/dark_text"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/avatar"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_notification"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="6.5dp"
            android:layout_marginEnd="20dp"
            android:background="@color/dark_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top" />

        <LinearLayout
            android:id="@+id/appid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App ID"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginLeft="75dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1234567890"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/appid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginLeft="75dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1234567890"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/kyc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KYC"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginLeft="95dp"
                android:padding="10dp"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1234567890"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/kyc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOB"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginLeft="95dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1234567890"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>
        <TextView
            android:id="@+id/levelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Level 1"
            android:textFontWeight="400"
            android:layout_marginTop="20dp"
            android:textColor="@color/dark_text"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dob"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/levelText"
            >
            <soup.neumorphism.NeumorphCardView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/card_left"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="40dp"
                    app:neumorph_shapeType="pressed">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@color/dark_text"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                </soup.neumorphism.NeumorphCardView>

            </soup.neumorphism.NeumorphCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/coinsleft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="20 coins till Level 2"
            app:layout_constraintTop_toBottomOf="@id/level"
            android:textSize="15sp"
            />
        <LinearLayout
            android:id="@+id/limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/coinsleft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Limit/Day"
                android:textSize="15sp"
                android:textFontWeight="500"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                />
            <soup.neumorphism.NeumorphCardView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:padding="10dp">
                <TextView
                    android:id="@+id/limitnum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Increases at level 3"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginTop="35dp"
                    />


            </soup.neumorphism.NeumorphCardView>

        </LinearLayout>


        <soup.neumorphism.NeumorphButton
            style="@style/Widget.Neumorph.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/limit"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>